# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*.intf

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet dhcp

auto swp1
iface swp1
    mtu 9216

auto swp2
iface swp2
    mtu 9216

auto swp3
iface swp3
    mtu 9216

auto swp4
iface swp4
    mtu 9216

auto swp5
iface swp5
    mtu 9216

auto swp6
iface swp6
    mtu 9216

auto swp7
iface swp7
    mtu 9216

auto swp8
iface swp8
    mtu 9216


#  MLAG/CLAG config...
auto peerlink
iface peerlink
    bond-slaves swp1 swp2
    mtu 9216

auto peerlink.4094
iface peerlink.4094
    address 169.254.255.2
    netmask 255.255.255.0
    clagd-priority 8192 
    clagd-peer-ip 169.254.255.1
    clagd-sys-mac 44:38:39:ff:00:01
    mtu 9216

auto host1
iface host1
    bond-slaves swp3
    clag-id 1 
    mstpctl-portadminedge yes
    mstpctl-bpduguard yes 
    mtu 9216

auto br0
iface br0
    bridge-vlan-aware yes
    bridge-ports peerlink host1 swp4 swp5
    bridge-stp on
    bridge-vids 101 201 301 401 501  
    bridge-pvid 1
    mstpctl-treeprio 8192
    mtu 9216
